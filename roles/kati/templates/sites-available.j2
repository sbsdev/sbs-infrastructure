
# HTTP server (redirects to HTTPS)
server {
    listen 80;
    {# for the production server we also need to define a server name kati.sbszh.ch #}
    server_name {{ ansible_host }} {{ ansible_host }}.sbszh.ch {% if ansible_host == "kati01" %}kati kati.sbszh.ch{% endif %};

    client_max_body_size 100M;

    location / {
        # redirect all HTTP to HTTPS
        return 301 https://{% if ansible_host == "kati01" %}kati{% else %}{{ ansible_host }}{% endif %}.sbszh.ch$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl;
    {# for the production server we also need to define a server name kati.sbszh.ch #}
    server_name localhost {{ ansible_host }} {{ ansible_host }}.sbszh.ch {% if ansible_host == "kati01" %}kati kati.sbszh.ch{% endif %};

    ssl_certificate /etc/ssl/letsencrypt/fullchain.pem;
    ssl_certificate_key /etc/ssl/letsencrypt/privkey.pem;

    access_log /var/log/nginx/{{ role_name }}_access.log;
    error_log /var/log/nginx/{{ role_name }}_error.log;

    location / {
        proxy_buffering off;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect  off;

        proxy_pass http://localhost:3000;
        client_max_body_size 100M;
    }
}
